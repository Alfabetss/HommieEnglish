<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_menu_background"
    tools:context=".MainMenu">

    <RelativeLayout
        android:id="@+id/cover_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/header_image"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/cover"
            android:scaleType="fitXY" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/cover_layout"
        android:padding="16sp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/learn_layout"
            android:clickable="true"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/learn_image"
                android:layout_width="75sp"
                android:src="@drawable/learn_image"
                android:layout_height="75sp">
            </ImageView>
            <TextView
                android:background="@drawable/background_color"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAllCaps="true"
                android:textSize="40sp"
                android:paddingLeft="10sp"
                android:gravity="left|center"
                android:textColor="@color/black"
                android:text="Learning">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/achievement_layout"
            android:clickable="true"
            android:layout_marginTop="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/achievement_image"
                android:layout_width="75sp"
                android:src="@drawable/achv_image"
                android:layout_height="75sp">
            </ImageView>
            <TextView
                android:background="@drawable/background_color"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAllCaps="true"
                android:textSize="40sp"
                android:gravity="left|center"
                android:textColor="@color/black"
                android:paddingLeft="10sp"
                android:text="Achievement">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/task_layout"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/task_image"
                android:layout_width="75sp"
                android:src="@drawable/task_image"
                android:layout_height="75sp">
            </ImageView>
            <TextView
                android:background="@drawable/background_color"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAllCaps="true"
                android:textSize="40sp"
                android:gravity="left|center"
                android:paddingLeft="10sp"
                android:textColor="@color/black"
                android:text="Task">
            </TextView>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>